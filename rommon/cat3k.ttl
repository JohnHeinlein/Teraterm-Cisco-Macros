; .======================================
; | Catalyst 3000 Series ROMMON Wipe
; '--------------------------------------
newstat = 'Entering rommon/cat3k.ttl'
include db2

DEVICE = 'switch'

; Bypass configs
sendln 'set SWITCH_IGNORE_STARTUP_CFG 1'
sendln 'set ENABLE_BREAK yes'
waitln 'switch: '

; .======================================
; | Boot & wait for "Press RETURN" prompt
; '--------------------------------------
sendln 'reset'
wait '(y/n)'
sendln 'y'

newstat = #10'Booting SWITCH...'
include stat

timeout = 0
do
	waitregex 'Press RETURN' 'not configured to boot automatically' 'Would you like to enter the initial configuration'
	if result = 2 sendln 'boot'
	if result = 3 sendln 'no'
loop while result != 1

newstat = ' done!'
include stat

send #13

newstat = 'Exiting rommon/cat3k.ttl'
include db2
exit