; .=====================================
; | 4000 Series Integrated Series Router ROMMON Wipe
; | =====================================
; | - Set confreg to ignore configs
; | - Reboot to wipe dynamically
; '--------------------------------------
newstat = #10'Entering rommon/isr.ttl'
include db2

sendln 'confreg 0x2142'
wait 'rommon'
sendln 'reset'

newstat =  #10'Booting ROUTER...'
include stat

; .======================================
; | Wait for "Press RETURN" prompt
; '--------------------------------------
timeout = 0

do ; Some models will prompt for setup when the config is ignored.
	waitregex 'Press RETURN' '\[yes/no\]'
	if result = 1 send #13
	if result = 2 sendln 'no'
loop while result != 1

newstat =  ' done!'
include stat

newstat = #10'Exiting rommon/isr.ttl'
include db2
exit