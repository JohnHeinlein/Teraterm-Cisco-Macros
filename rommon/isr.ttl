; =====================================
; 4000 Series Integrated Series Router ROMMON Wipe
; =====================================
; - Set confreg to ignore configs
; - Reboot to wipe dynamically
;--------------------------------------
sendln 'confreg 0x2142'
waitln 'rommon'
sendln 'reset'

; Verbosity -----
	strconcat statstr #10'Booting ROUTER...'
	statusbox statstr hostname
; ----- ----- -----

;======================================
; Wait for "Press RETURN" prompt
;--------------------------------------
timeout = 0
wait 'Press RETURN'
send #13 ;ASCII CR

; Verbosity -----
	strconcat stastr ' done!'
	statusbox statstr hostname
; ----- ----- -----

exit